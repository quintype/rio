<div class="content">
    <!-- content open-->
    <section class="sub-section-page">
        <h3 class="line-title top-title">{{section['display-name']}}</h3>
        <div class="top-stories">
             <div class="lead-story">
                  <div class="lead-story-right-container">
                     <div class="top-story__content-container">
                          <a href="/{{section_stories[0]['slug']}}">
                              <div class="article__title">{{shorthead(section_stories[0]['headline'])}}</div>
                          </a>
                          {% if section_stories[0]["summary"] %}
                              <div class="article__desciption">
                                  <p>{{section_stories[0]['summary']}}</p>
                              </div>
                          {% endif %}
                            <div class="author-name-description">
                                 <a href="/author/{{section_stories[0]['author-id']}}">
                                     by {{section_stories[0]['author-name']}}
                                 </a>
                                 <time>on {{ (section_stories[0]['first-published-at'] // 1000)|date('M d, Y')}}</time>
                           </div>
                     </div>
                      <div class="top-story__image-container">
                          <a href="/{{section_stories[0]['slug']}}">
                              <figure>
                                  <img src="{{focusedImageUrl(section_stories[0]['hero-image-s3-key'] ,config['image-cdn'], [16,9], section_stories[0]['hero-image-metadata'],{w:550} )}}"/>
                              </figure>
                          </a>
                      </div>
                  </div>
                  <div class="lead-story-left-container">
                     <div class="lead-story__add-box">
                       <h4> Ad Box</h4>
                     </div>
                 </div>
            </div>
            <div class="top-stories__grid">
                {% for story in section_stories[1 : 3] %}
                    <article class="article-grids">
                        <a href="/{{story['slug']}}" class="article__image-container">
                            <figure>
                                <img src="{{focusedImageUrl(story['hero-image-s3-key'] ,config['image-cdn'], [16,9], section_stories[0]['hero-image-metadata'],{w:200} )}}"/>
                            </figure>
                        </a>
                        <div class="grid__article">
                            <a href="/{{story['slug']}}" class="article__content-container">
                                <h4>{{story['headline']}}</h4>
                                <p>{{story['summary']}}</p>
                            </a>
                        </div>
                    </article>
                {% endfor %}
            </div>
        </div>
       <div class="bottom-stories">
              <div class="sectionsleft" id="load-more-stories-target">
                      <h3 class="title-recent-stories">Recent Stories</h3>
                      {% include "story/elements/stories_list" with {
                          'stories': section_stories | slice(4)
                      } %}
              </div>
              <div class="sections-right">
                  <div class="sections-add-right">
                         <h4>Add Box</h4>
                  </div>
             </div>
       </div>
    </section>
  </div>
{% include "story/elements/loadmore" %}

<script type="text/javascript">
    qtReady.push(function() {
        app.loadMoreStories('#loadmore', '#load-more-stories-target', {{ params | json_encode | raw }});
    })
</script>
